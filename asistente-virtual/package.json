{
  "name": "sara-asistente-virtual",
  "version": "1.0.0",
  "description": "Asistente Virtual IA de SARA - Siempre presente para ayudar",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron . --no-sandbox",
    "dev": "node scripts/dev-server.js",
    "dev:electron": "concurrently \"npm run start\" \"wait-on http://localhost:8000 && npm run dev:renderer\"",
    "dev:renderer": "cd src/renderer && npm run serve",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "electron-builder",
    "build:renderer": "cd src/renderer && npm run build",
    "dist": "npm run build && electron-builder",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps",
    "lint": "eslint src/**/*.js",
    "test": "jest"
  },
  "keywords": ["sara", "asistente", "ia", "productividad", "electron"],
  "author": "SARA Team",
  "license": "MIT",
  "devDependencies": {
    "chokidar": "^3.5.3",
    "concurrently": "^7.6.0",
    "electron": "^25.0.0",
    "electron-builder": "^24.0.0",
    "eslint": "^8.45.0",
    "jest": "^29.6.1",
    "wait-on": "^7.0.0"
  },
  "dependencies": {
    "active-win": "^8.2.1",
    "axios": "^1.4.0",
    "electron-store": "^8.1.1",
    "node-notifier": "^10.0.1"
  },
  "build": {
    "appId": "com.sara.asistente-virtual",
    "productName": "SARA Asistente Virtual",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icons/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icons/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icons/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}