# Variables de entorno para SARA Asistente Virtual con Docker

# Configuración de Django
SECRET_KEY=django-insecure-sara-secret-key-2025
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,backend,0.0.0.0,testserver

# Base de datos PostgreSQL (producción)
DATABASE_URL=postgresql://sara_user:sara_password@db:5432/sara_db

# Base de datos SQLite (desarrollo - descomenta para usar SQLite)
# DATABASE_URL=sqlite:///db.sqlite3

# Configuración de X11 para Electron (solo en Linux)
DISPLAY=:0

# URL del backend API
API_URL=http://backend:8000/api

# Configuración adicional de Django
DJANGO_SETTINGS_MODULE=sara.settings
PYTHONUNBUFFERED=1

# Configuración de Electron
ELECTRON_DISABLE_SECURITY_WARNINGS=true
NODE_ENV=development